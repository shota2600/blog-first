<div class="container">
  <div class="row">
    <div class="col-md-11 edit_post_main">
      <div class="col-md-11 edit_post_icon">
        <h2 class="edit_post_subtitle"><img src="/images/white_post_icon.png" alt="">EDIT POST</h2>
      </div>
      <div class="row">
        <div class="col-md-5 edit_post_image">
          <%= form_for(@list, url: "/blogs") do |f| %>
            <div class="edit_post_img">
              <img src="/images/gg.jpeg" alt="" width="100%" height="auto">
            </div>
            <div class="edit_image_form">
              <%= f.file_field :img, class: "image" %>
            </div>
        </div>
        <div class="col-md-7 edit_post_form">
          <div class="edit_title">
            <h5 class="edit_form-title">Title</h5>
            <%= f.text_field :title, class:"text_title" %>
          </div>
          <div class="edit_post_boby">
            <h5 class="edit_body">Comment</h5>
            <%= f.text_area :body, :placeholder =>"#{@list.body}", class:"edit_text_body" %>
          </div>
         </div>
      </div>
      <div class="edit_buttom">
        <%= f.submit "POST" %>
      </div>
    <% end %>
    </div>
  </div>
</div>