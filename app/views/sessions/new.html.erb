<div class="container">
  <div class="login_comment">
    <div class="login_logo">
      <img src="/images/mini_icon.png" class="mini_logo" alt="mini_logo">
    </div>
    <div class="login_menu">
      <%= form_for(:session, url: login_path) do |f| %>
      <div class="login_email">
        <img src="/images/mini_email_icon.png" class="email_icon" alt="email_icon">
        <%= f.email_field :email, {class: "email_label"} %>
      </div>
      <div class="login_password">
        <img src="/images/mini_password_icon.png" class="password_icon" alt="password_icon">
        <%= f.password_field :password, {class: "password_label"} %>
      </div>
      <div class="login_buttom">
              <%= f.submit "Login", class:"login_bth" %>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

